<!DOCTYPE html>
<html>
  <%- include("./partials/head") %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include("./partials/nav") %>

    <!-- Header -->
    <%- include("./partials/header") %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <% platos.forEach(plato => { %> <% if (id == plato.id) { %>

          <h1 class="ps-center"><%= plato.nombre %></h1>
          <br />
          <h4><%= plato.descripcion %></h4>
          <p class="ps-text-grey"><%= plato.precio %></p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="<%= plato.img %>"
            class="ps-round ps-image ps-opacity-min"
            alt="<%= plato.alt %> "
          />
        </div>
        <% } %> <% }) %>
      </div>

      <!-- Footer -->
      <%- include("./partials/footer") %>
    </div>
  </body>
</html>
